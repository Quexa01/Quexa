<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>QUEXA</title>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="/uploads/webstyles1.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital@0;1&display=swap" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            background-image: url("/uploads/Images/bg1.avif");
            background-size: cover;
            height: 100vh;
            background-position: center center;
        }
    </style>
</head>

<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom navbar-fixed nav">
            <a href="/"
                class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <span class="fs-4"><img src="/uploads/Images/logo_bg.png" class="logo" alt="Quexa Logo" /></span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a href="/" class="nav-link active" aria-current="page">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/upload" class="nav-link">Upload</a>
                </li>
                <li class="nav-item">
                    <a href="/search" class="nav-link">Download</a>
                </li>
            </ul>
        </header>
    </div>

    <body>
        <% if (posts && posts.length> 0) { %>
            <div class="Search posts-container">
                <% posts.forEach(post=> { %>
                    <div class="post">
                        <p>Course Code: <%= post.courseCode %>
                        </p>
                        <p>Exam Date: <%= post.examDate %>
                        </p>
                        <p>Slot: <%= post.slot %>
                        </p>
                        <p>Slot: <%= post.examType %>
                        </p>
                        <button class="show-images" data-course="<%= post.courseCode %>"
                            data-date="<%= post.examDate %>" data-slot="<%= post.slot %>">Show Images</button>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <p>No posts found.</p>
                <% } %>

                    <a href="/">Back to Home</a>

                    <script>
                        const showButtons = document.querySelectorAll(".show-images");
                        showButtons.forEach(button => {
                            button.addEventListener("click", () => {
                                const courseCode = button.getAttribute("data-course");
                                const examDate = button.getAttribute("data-date");
                                const slot = button.getAttribute("data-slot");
                                window.location.href = `/display/images?courseCode=${courseCode}&date=${examDate}&slot=${slot}`;
                            });
                        });
                    </script>

                    <!-- Include your footer partial -->
                    <%- include("partials/footer"); -%>
    </body>

</html>

